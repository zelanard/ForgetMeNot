<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Exact alarms (required for exact scheduling on Android 12+ in many cases) -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ForgetMeNot">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.expandable.ExpandableSectionActivity" />

        <!-- Menu Destinations -->
        <activity
            android:name=".todo.ToDoActivity"
            android:exported="false" />

        <activity
            android:name=".habits.HabitTrackerActivity"
            android:exported="false" />

        <activity
            android:name=".workflow.WorkFlowActivity"
            android:exported="false" />

        <activity
            android:name=".About.AboutActivity"
            android:exported="false" />

        <!-- Alarm receiver for "work day is over" notifications -->
        <receiver
            android:name=".workflow.WorkdayOverReceiver"
            android:exported="false" />

    </application>

</manifest>