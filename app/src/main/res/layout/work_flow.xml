<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:layout_marginTop="24dp"
    android:layout_marginBottom="24dp"
    >

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Status: Checked out"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvSelectedPreview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Selected: (now)"
        app:layout_constraintTop_toBottomOf="@id/tvStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="0dp"/>

    <EditText
        android:id="@+id/etDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Date"
        android:focusable="false"
        android:clickable="true"
        android:inputType="none"
        app:layout_constraintTop_toBottomOf="@id/tvSelectedPreview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp"/>

    <EditText
        android:id="@+id/etTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Time"
        android:focusable="false"
        android:clickable="true"
        android:inputType="none"
        app:layout_constraintTop_toBottomOf="@id/etDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp"/>

    <EditText
        android:id="@+id/etIntendedHours"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Intended work (hours)"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/etTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp"/>

    <EditText
        android:id="@+id/etIntendedMinutes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Intended work (minutes)"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/etIntendedHours"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp"/>

    <EditText
        android:id="@+id/etBreakMinutes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Break (minutes)"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/etIntendedMinutes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp"/>

    <Button
        android:id="@+id/btnToggleCheck"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Check in"
        app:layout_constraintTop_toBottomOf="@id/etBreakMinutes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
